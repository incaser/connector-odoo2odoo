<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <!-- Projects -->
    <record id="view_odooconnector_project_form" model="ir.ui.view">
        <field name="name">odooconnector.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">

            <xpath expr="//page[last()]" position="after">
                <page string="Odoo Connector">
                    <field name="oc_bind_ids">
                        <tree string="Bindings" editable="bottom">
                            <field name="backend_id" />
                            <field name="external_id" />
                            <field name="exported_record" readonly="1" />
                        </tree>
                    </field>
                </page>
            </xpath>

        </field>
    </record>

    <!-- Tasks -->
    <record id="view_odooconnector_project_task_form" model="ir.ui.view">
        <field name="name">odooconnector.project.task.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">

            <xpath expr="//page[last()]" position="after">
                <page string="Odoo Connector">
                    <field name="oc_bind_ids">
                        <tree string="Bindings" editable="bottom">
                            <field name="backend_id" />
                            <field name="external_id" />
                            <field name="exported_record" readonly="1" />
                        </tree>
                    </field>
                </page>
            </xpath>

        </field>
    </record>

    <!-- Task Works -->
    <record id="view_odooconnector_project_task_work_form" model="ir.ui.view">
        <field name="name">odooconnector.project.task.work.form</field>
        <field name="model">project.task.work</field>
        <field name="inherit_id" ref="project.view_task_work_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='company_id']" position="after">
                    <field name="oc_bind_ids">
                        <tree string="Bindings" editable="bottom">
                            <field name="backend_id" />
                            <field name="external_id" />
                            <field name="exported_record" readonly="1" />
                        </tree>
                    </field>
            </xpath>

        </field>
    </record>

</data>
</openerp>
